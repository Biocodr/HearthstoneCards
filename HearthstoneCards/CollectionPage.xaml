            <TextBlock Text="{Binding ElementName=XLightStoneElement, Path=Depth}" Margin="10" Style="{StaticResource BodyNormalSized}"/>
            
            <TextBlock Text="TranslateY" Margin="10" Style="{StaticResource BodyNormalSized}"/>
            <Slider HorizontalAlignment="Left" Margin="10" Minimum="0" Maximum="500" Value="{Binding TranslateY, ElementName=XLightStoneElement, Mode=TwoWay}"  VerticalAlignment="Center" Width="190" Height="40"/>
