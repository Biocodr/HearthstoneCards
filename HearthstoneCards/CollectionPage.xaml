            MaxVisibleItems="2"
            SelectedIndex="0"
            Rotation="50"
            Depth="660"
            TranslateX="50"
            TranslateY="0">-->
    
    <!--<Grid>
        
        
            --><!--<caroussel:LightStone.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </caroussel:LightStone.EasingFunction>--><!--

            <caroussel:LightStone.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Image
                            Width="200"
                            Source="{Binding Image}"
                            VerticalAlignment="Bottom"
                            Stretch="Uniform"/>
                    </Grid>
                </DataTemplate>
            </caroussel:LightStone.ItemTemplate>
        </caroussel:LightStone>

        <Border
            DataContext="{Binding ElementName=XLightStoneElement, Path=SelectedItem}"
            Margin="0,10">
            <StackPanel>
                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                <TextBlock Text="{Binding Rarity}"/>
                <TextBlock Text="{Binding Class}"/>
                <TextBlock Text="{Binding Type}"/>
                <TextBlock Text="{Binding CardSet}"/>
            </StackPanel>
        </Border>

        --><!--<StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" >
            <TextBlock Text="Rotation" Margin="10" Style="{StaticResource BodyNormalSized}"/>
