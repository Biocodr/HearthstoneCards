            <TextBlock Text="{Binding ElementName=XLightStoneElement, Path=Rotation}" Margin="10" Style="{StaticResource BodyNormalSized}"/>
            
            <TextBlock Text="Depth" Margin="10" Style="{StaticResource BodyNormalSized}"/>
