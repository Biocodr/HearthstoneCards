    <DataTemplate x:Key="CardOnlyItemTemplate">
        <Grid
            Margin="0, 0, 0, 5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Image
                Grid.Row="0"
                Height="227"
                VerticalAlignment="Center"
                Source="{Binding Image}"
                Stretch="Uniform"/>
