<local:BasePage
    x:Class="HearthstoneCards.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HearthstoneCards"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:slideView="using:HearthstoneCards.SlideView"
    xmlns:helper="using:HearthstoneCards.Helper"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Hub>
        <HubSection Style="{StaticResource NarrowHubSectionStyle}">
            <DataTemplate>
                <Grid Background="Black">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock 
                        Grid.Row="1" Text="Classes"/>
                    <ListView
                        Grid.Row="2"
                        ItemsSource="{Binding ClassOptions}"
                        SelectionMode="Multiple"
                        ItemContainerStyle="{StaticResource SelectionListViewItemStyle}"
                        ItemTemplate="{StaticResource ClassOptionItemTemplate}"
                        SelectionChanged="MultiSelector_OnSelectionChanged">
                    </ListView>

                    <!--<local:MultiSelector
                            Grid.Row="1"
                            Title="Class"
                            Options="{Binding ClassOptions}"
                            ItemTemplate="{StaticResource ClassOptionItemTemplate}"
                            SelectionChanged="MultiSelector_OnSelectionChanged">
                            <local:MultiSelector.ItemContainerStyle>
                                <Style TargetType="ListBoxItem" BasedOn="{StaticResource CheckboxListBoxItemStyle}">
                                    <Setter Property="IsSelected" Value="True"/>
                                </Style>
                            </local:MultiSelector.ItemContainerStyle>
                        </local:MultiSelector>-->
                </Grid>
            </DataTemplate>
        </HubSection>
        <HubSection>
            <DataTemplate>
                <ListView
                    ItemsSource="{Binding FilterResults}"
                    ItemTemplate="{StaticResource CardItemTemplate}"/>
            </DataTemplate>
        </HubSection>
    </Hub>
    
</local:BasePage>
